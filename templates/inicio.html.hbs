        .iconos {
            position: absolute;
            height: 60px;
            width: 120px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            flex-wrap: nowrap;
            top: 4%;
            left: 80%;
        }

        .icon {
            height: 35px;
            width: 40px;
            margin: 5px;
        }

        .margen{
            margin-top: 15px;
            height: 25vh;
            position: relative;
            z-index: 999;
        }

        .imagen_fecha {
            position: absolute;
            top: 0;
            left: 58%;
            height: 25vh;
            width: 42%;
            filter: opacity(40%);
            border-top-left-radius: 50%;
            border-bottom-left-radius: 50%;
            z-index: 0;
        }

        .months::-webkit-scrollbar {
            width: 0.7em;
            background-color: #1A2130;
        }

        .dates_container::-webkit-scrollbar {
            width: 0.7em;
            background-color: #373A40;
        }


        .months::-webkit-scrollbar-thumb,
        .dates_container::-webkit-scrollbar-thumb {
            background-color: #EEEEEE;
            border-radius: 4px;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const months = document.querySelectorAll('.month');
            months.forEach(month => {
                month.addEventListener('click', function () {
                    fetch(`/fechasPorMes/${month.id}`)
                        .then(response => response.json())
                        .then(data => {
                            const datesContainer = document.querySelector('.dates');

                            // Limpiar el contenedor de fechas antes de añadir nuevas
                            datesContainer.innerHTML = ''; // Vacía el contenido del contenedor

                            data.forEach(fecha => {
                                const fechaDiv = document.createElement('div');
                                fechaDiv.className = 'date';
                                fechaDiv.innerHTML = `
                            <div class="margen">
                            <div class="tit">${fecha.titulo}<a href="${fecha.enlace}" target="_blank"><i class="fa-solid fa-up-right-from-square"></i></a></div>
                            <p class="cat">${fecha.categoria}</p> 
                            <p class="fec">Día de lanzamiento: ${fecha.fecha_dia}</p>
                            <div class="iconos"></div>
                            <p class="desc">"${fecha.descripcion}"</p>
                            <a class="edit" href="/editarFecha/${fecha.id}">Editar</a>
                            <a class="eli" href="/eliminarFecha/${fecha.id}" onclick="return confirm('¿Estas seguro de eliminar esta fecha?');">Eliminar</a>
                            </div>
                            <img src="${fecha.imagen_url}" class="imagen_fecha">
                        `;

                                const iconosDiv = fechaDiv.querySelector('.iconos');

                                function ocultarDiv() {
  document.getElementById("fondo_negro").style.display = "none";
}

                                // Condicionales para cada plataforma
                                if (fecha.steam) {
                                    const img = document.createElement('img');
                                    img.src = 'https://static-00.iconduck.com/assets.00/steam-icon-2026x2048-3b7rynay.png';
                                    img.className = 'icon';
                                    iconosDiv.appendChild(img);
                                }
                                if (fecha.epic) {
                                    const img = document.createElement('img');
                                    img.src = 'https://cdn.icon-icons.com/icons2/3914/PNG/512/epicgames_logo_icon_248935.png';
                                    img.className = 'icon';
                                    iconosDiv.appendChild(img);
                                }
                                if (fecha.gog) {
                                    const img = document.createElement('img');
                                    img.src = 'https://cdn.icon-icons.com/icons2/2248/PNG/512/gog_icon_135545.png';
                                    img.className = 'icon';
                                    iconosDiv.appendChild(img);
                                }
                                if (fecha.gamepass) {
                                    const img = document.createElement('img');
                                    img.src = 'https://seeklogo.com/images/X/xbox-game-pass-logo-AE8A6FFA38-seeklogo.com.png';
                                    img.className = 'icon';
                                    iconosDiv.appendChild(img);
                                }
                                if (fecha.ubisoftplus) {
                                    const img = document.createElement('img');
                                    img.src = 'https://upload.wikimedia.org/wikipedia/commons/thumb/7/78/Ubisoft_logo.svg/2238px-Ubisoft_logo.svg.png';
                                    img.className = 'icon';
                                    iconosDiv.appendChild(img);
                                }
                                if (fecha.eaplay) {
                                    const img = document.createElement('img');
                                    img.src = 'https://logos-world.net/wp-content/uploads/2020/08/Electronic-Arts-Logo-2000-present.png';
                                    img.className = 'icon';
                                    iconosDiv.appendChild(img);
                                }
                                datesContainer.appendChild(fechaDiv);
                            });
                        })
                        .catch(error => console.error('Error al mostrar las fechas: ', error));
                });
            });
        });
    </script>
