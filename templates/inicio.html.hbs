        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            background-color: #f0f0f0;
            overflow-y: hidden;
        }

        .container {
            width: 100%;
            display: flex;
            align-items: stretch;
        }

        h1 {
            text-align: center;
        }

        .months {
            width: 60%;
            background-color: #1A2130;
            padding: 15px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* Tres meses por fila */
            grid-gap: 15px;
            overflow-y: auto;
        }

        .month {
            position: relative;
            height: 19vh;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #8a8a8a;
            cursor: pointer;
        }

        .month p {
            position: absolute;
            top: 5%;
            left: 50%;
            transform: translateX(-50%);
            color: #dbdbdb;
            font-size: 2.2vh;
            font-family: "Montserrat", sans-serif;
            margin-top: 1vh;
            width: fit-content;
            /* Asegura que el p tenga solo el ancho de su contenido */
        }

        .month::before {
            content: "";
            border-radius: 8px;
            width: 100%;
            height: 55%;
            position: absolute;
            top: 0;
            right: 0;
            background: linear-gradient(rgba(0, 0, 0, 0.8) 50%, rgba(255, 255, 255, 0));
        }

        .month:hover {
            border: 1px solid #ffffff;
        }

